cd

export _JAVA_AWT_WM_NONREPARENTING=1
export QT_AUTO_SCREEN_SCALE_FACTOR=

if test -f ~/.config/sx/Xresources; then
	xrdb -merge ~/.config/sx/Xresources
fi

HOST=`hostnamectl hostname`
if [ $HOST = 'beast' ]; then
	MOUSE_ID=`xinput list --id-only 'pointer:SteelSeries SteelSeries Rival 600'`
	ACCEL=0.15
	xinput set-float-prop $MOUSE_ID 'Coordinate Transformation Matrix' $ACCEL 0 0 0 $ACCEL 0 0 0 1
fi

systemctl --user import-environment XAUTHORITY DISPLAY PATH SSH_AUTH_SOCK SSH_AGENT_PID

# no cd; should keep current working directory as $HOME
for file in `ls -1 ~/.config/autostart-pre`; do
  ~/.config/autostart-pre/$file
done

for file in `ls -1 ~/.config/autostart-bin`; do
  ~/.config/autostart-bin/$file &
done

systemctl --user start dwm.target
systemctl --user --wait start dwm.service
#while true; do
#	~/bin/dwm
#done
systemctl --user stop dwm.target
